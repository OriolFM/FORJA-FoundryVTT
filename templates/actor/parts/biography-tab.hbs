<section class="forja-biography tab" data-group="primary" data-tab="biography">
  {{!-- Biography rich text editor --}}
  <div class="forja-biography__section">
    <h3 class="forja-section-heading">{{localize "FORJA.Biography"}}</h3>
    <div class="forja-biography__editor">
      <textarea name="system.biography" class="forja-biography__textarea" rows="8">{{system.biography}}</textarea>
    </div>
  </div>

  {{!-- Notes rich text editor --}}
  <div class="forja-biography__section">
    <h3 class="forja-section-heading">{{localize "FORJA.Notes"}}</h3>
    <div class="forja-biography__editor">
      <textarea name="system.notes" class="forja-biography__textarea" rows="6">{{system.notes}}</textarea>
    </div>
  </div>

  {{!-- Resources --}}
  <div class="forja-biography__section">
    <h3 class="forja-section-heading">{{localize "FORJA.Resources"}}</h3>
    <textarea name="system.resources" class="forja-biography__textarea" rows="3">{{system.resources}}</textarea>
  </div>

  {{!-- Guanxi --}}
  <div class="forja-biography__section">
    <h3 class="forja-section-heading">{{localize "FORJA.Guanxi"}}</h3>
    <textarea name="system.guanxi" class="forja-biography__textarea" rows="3">{{system.guanxi}}</textarea>
  </div>
</section>
